
package contador;


public class Contador {


    public static void main(String[] args) {
        
        int N = 10; //Numero designado en N
        int Contador = 0; //El contador para hacer la sumatoria
        
        while (N > 0) { // Mientras que N sea mayor a 0
            Contador = Contador + N; // Contador suma a N
            N = N - 1; // Y N va restandose 1 cada vez que se suma
        
        }
        System.out.println("La sumatoria de 10 es "+Contador);
    }
    }
